{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/bo/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nrwl/node:webpack",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/apps/bo",
        "main": "apps/bo/src/main.ts",
        "tsConfig": "apps/bo/tsconfig.app.json",
        "assets": [
          "apps/bo/src/assets"
        ]
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false,
          "fileReplacements": [
            {
              "replace": "apps/bo/src/environments/environment.ts",
              "with": "apps/bo/src/environments/environment.prod.ts"
            }
          ]
        }
      }
    },
    "serve": {
      "executor": "@nrwl/node:node",
      "options": {
        "buildTarget": "bo:build"
      },
      "configurations": {
        "production": {
          "buildTarget": "bo:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "apps/bo/**/*.ts"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": [
        "coverage/apps/bo"
      ],
      "options": {
        "jestConfig": "apps/bo/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "docker": {
      "dependsOn": [
        {
          "projects": "self",
          "target": "build"
        }
      ],
      "executor": "@nx-tools/nx-docker:build",
      "options": {
        "push": false,
        "load": true,
        "tags": [
          "igor-enso/bo"
        ]
      }
    },
    "release": {
      "dependsOn": [
        {
          "projects": "self",
          "target": "docker"
        }
      ],
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          "npx semantic-release-plus"
        ],
        "cwd": "apps/bo/"
      }
    }
  },
  "tags": []
}